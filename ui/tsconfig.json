{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true /* Allow javascript files to be compiled. */,
    "outDir": "dist",
    "declaration": true,
    "composite": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": "./src"
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "./src/index.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "babel.config.js "
  ]
}
